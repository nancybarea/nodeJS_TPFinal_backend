<!DOCTYPE html>

<html lang="es">

  <head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>

  <body>
    <div class="container my-5">
      <div class=jumbotron>
        <h1>LOGIN</h1>
        
        <br>

        <form action="/login" method="post" class="form">
          <!-- email -->
          <div class="form-group">
            <input id='email' name='email' placeholder="email" class="form-control" type="text" required>
          </div>
          <!--password -->
          <div class="form-group">
            <input id='password' name='password' placeholder="password" class="form-control" type="password" required>
          </div>
          <!-- botÃ³n login -->
          <div class="form-group">
            <input type="submit" value="Aceptar" class="btn btn-success my-3" >
          </div>
        </form>

        <hr>
        <!-- boton registrarse -->
        <div class="text-center"></div>
          <button class="btn btn-success my-3" onclick="registrarse()">Registrarse</button>
        </div>

    </div>

    <script>
      function redireccionar(pagina) {
        location.href = pagina;
      }
      function registrarse() {
        redireccionar('/registrarse');
      }
    </script>

  </body>
</html>