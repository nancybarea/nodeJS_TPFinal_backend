<STYLE type="text/css">
    * {
       margin: 0;
       padding: 0;
     }

     html {
       font-size: 62.5%;
       /* medida ajustada para luego usar 1rem = 10px */
     }

     body {
       font-family: Arial, Helvetica, sans-serif;
       font-size: 1.6rem;
     }
   .fondo__degrade {
     background: linear-gradient(90deg, #cccccc 0%, #cccccc 17%, white 100%);
   }
   .main__login {
     text-align: center;
     padding-bottom: 3rem;
   }
   .main__login fieldset {
     background-color: rgba(0, 0, 0, 0.25);
     color: white;
     border-radius: 10px;
     box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, 0.4);
     border: 0px;
     padding: 2rem;
     width: 80%;
     display: inline-block;
   }
   .main__login label {
     display: block;
   }
   .main__login input {
     border: none;
     border-radius: 5px;
   }
   .main__login .login__btn {
     background-color: black;
     color: white;
   }
   .main__login .login__btn:hover {
     background-color: white;
     color: black;
   }
   .main__login a {
     text-decoration: none;
     color: black;
     display: block;
   }
   .main__login a:hover {
     font-weight: 700;
   }

   @media (min-width: 426px) {
     .main__login fieldset {
       width: 50%;
     }
   }
   @media (min-width: 1024px) {
     .main__login fieldset {
       width: 40%;
     }
   }
   .footer {
     background-color: black;
   }
   .footer .footer__redes {
     text-align: right;
     width: 100%;
     padding: 1rem;
     background-color: #595959;
   }
   .footer .footer__redes .redes__link {
     color: white;
   }
   .footer .copyright {
     text-align: center;
     color: white;
     font-size: 1.4rem;
     padding: 1rem 0;
   }
 </STYLE>